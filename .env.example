# 오성중학교 동아리 시스템 환경 변수 설정

# 서버 포트
PORT=3000

# 데이터베이스 연결 URL (PostgreSQL)
# 로컬 개발용 예시
DATABASE_URL=postgresql://username:password@localhost:5432/osung_club_db

# Render.com 배포 시 자동으로 설정됨 (아래 주석 참고)
# DATABASE_URL=postgresql://user:password@hostname:port/database

# JWT 비밀키 (랜덤한 복잡한 문자열로 설정)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 애플리케이션 환경
NODE_ENV=development

# 보안 설정
CORS_ORIGIN=http://localhost:3000

# 로그 레벨
LOG_LEVEL=info

# 세션 설정
SESSION_SECRET=your-session-secret-key

# 파일 업로드 제한 (MB)
MAX_FILE_SIZE=10

# Rate Limiting 설정
RATE_LIMIT_WINDOW_MS=900000  # 15분
RATE_LIMIT_MAX_REQUESTS=100  # 최대 요청 수

# 암호화 솔트 라운드
BCRYPT_SALT_ROUNDS=10

# ====================================
# Render.com 배포 시 설정 방법:
# ====================================
# 1. Render.com에서 PostgreSQL 데이터베이스 생성
# 2. 생성된 DATABASE_URL을 복사하여 환경 변수에 설정
# 3. JWT_SECRET을 강력한 랜덤 문자열로 설정
# 4. NODE_ENV를 'production'으로 설정
# 5. CORS_ORIGIN을 실제 배포 도메인으로 설정

# 예시 운영 환경 설정:
# NODE_ENV=production
# DATABASE_URL=postgresql://osung_club_db_user:password@host:5432/osung_club_db
# JWT_SECRET=super-complex-random-string-for-jwt
# CORS_ORIGIN=https://your-app-name.onrender.com